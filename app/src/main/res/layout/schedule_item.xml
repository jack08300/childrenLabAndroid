<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/schedule_list_border"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/scheduleSearchResultFromDate"
        style="@style/mainText"
        android:text="2015-04-40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            style="@style/mainText"
            android:text=" - "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/scheduleSearchResultToDate"
        style="@style/mainText"
        android:text="2015-04-40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

     </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/scheduleSearchResultProfile"
            style="@style/mainText"
            android:width="30dp"
            android:height="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/scheduleSearchResultName"
            style="@style/mainText"
            android:text="First Name - Last Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/scheduleSearchStatus"
                style="@style/mainText"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/listTags"
        style="@style/mainText"
        android:text="tag1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>