<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/mainBackground"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">

            <TableRow android:gravity="center">
                <TextView android:text="Schedule" style="@style/mainButton" android:id="@+id/scheduleButton" android:textSize="@dimen/default_title"/>
            </TableRow>

            <TableRow android:gravity="center" android:layout_marginTop="20dp">
                <TextView android:text="Kids" style="@style/mainButton" android:id="@+id/kidsButton" android:textSize="@dimen/default_title"/>
            </TableRow>

            <TableRow android:gravity="center" android:layout_marginTop="20dp">
                <TextView android:text="Device" style="@style/mainButton" android:id="@+id/deviceButton" android:textSize="@dimen/default_title"/>
            </TableRow>


        </TableLayout>

</LinearLayout>