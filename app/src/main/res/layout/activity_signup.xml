<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/mainBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TableRow android:gravity="center">
                <EditText android:inputType="text" android:id="@+id/errorMessage" android:background="@color/trans"
                    android:layout_span="4" android:layout_width="match_parent" android:textColor="@color/error"/>
            </TableRow>
            <TableRow android:gravity="center">
                <TextView android:text="Email" style="@style/mainText"/>
                <EditText android:inputType="textEmailAddress"  style="@style/mainEdit" android:id="@+id/emailEdit"/>
            </TableRow>
            <TableRow android:gravity="center">
                <TextView android:text="Password" style="@style/mainText"/>
                <EditText android:inputType="textPassword"  style="@style/mainEdit" android:id="@+id/passwordEdit"/>
            </TableRow>
            <TableRow android:gravity="center">
                <TextView android:text="First Name" style="@style/mainText"/>
                <EditText android:inputType="text|textPersonName"  style="@style/mainEdit" android:id="@+id/fNameEdit"/>
            </TableRow>
            <TableRow android:gravity="center">
                <TextView android:text="Last Name" style="@style/mainText"/>
                <EditText android:inputType="text|textPersonName"  style="@style/mainEdit" android:id="@+id/lNameEdit"/>
            </TableRow>
            <TableRow android:gravity="center">
                <TextView android:text="Phone Num" style="@style/mainText"/>
                <EditText android:inputType="text|textPersonName"  style="@style/mainEdit" android:id="@+id/phoneEdit"/>
            </TableRow>
            <TableRow android:gravity="center">
                <TextView android:text="Gender" style="@style/mainText"/>
                <RadioGroup android:orientation="horizontal" android:id="@+id/genderGroup">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/mainText"
                        android:id="@+id/maleRadioButton"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@color/mainText"
                        android:id="@+id/femaleRadioButton"/>
                </RadioGroup>
                <TextView android:text="" android:layout_span="2"/>

            </TableRow>

            <TableRow android:gravity="center" android:layout_marginTop="20sp">
                <TextView android:text="Sign-up" style="@style/mainButton" android:id="@+id/signupButton"/>
            </TableRow>
        </TableLayout>

    </ScrollView>

</LinearLayout>
